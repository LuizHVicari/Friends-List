<h2 class="my-2 d-flex justify-content-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="d-flex justify-content-center">
  <div class="input-group w-75">
    <%= f.label :email, class: "input-group-text w-25" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
  </div>
</div>


<div class="d-flex justify-content-center">
  <div class="input-group w-75 mt-2">
    <%= f.label :password, class: "input-group-text w-25" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <% if devise_mapping.rememberable? %>
    <div class="my-2">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
</div>
<% end %>

<div class="d-flex justify-content-center">
  <%= f.submit "Log in", class: "btn btn-primary mb-2" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
