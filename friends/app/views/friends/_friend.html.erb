<div id="<%= dom_id friend %>">
  <h2 class="card-title">
    <%= friend.first_name.titleize %>
    <%= friend.last_name.titleize %>
  </h2>

  <p class='card-text'>
    <strong>Email:</strong>
    <%= friend.email %>
  </p>

  <p class='card-text'>
    <strong>Phone:</strong>
    <%= friend.phone %>
  </p>

  <p class='card-text'>
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </p>

</div>
