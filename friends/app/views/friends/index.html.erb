<h1>Friend List</h1>

<div id="friends">
  <table class="table table-striped table-hover table-bordered border-secondary">
    <tr class="table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="2"></th>
    </tr>
    <tbody>
      <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
        </td>

        <td>
          <%= friend.email %>
        </td>

        <td>
          <%= friend.phone %>
        </td>

        <td>
          <%= friend.twitter %>
        </td>
        <td>
          <%= friend.user_id %>
        </td>

        <td>
          <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning btn-sm" %>
        </td>

        <td>
          <%= link_to "Delete", friend, data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
        </td>

      </tr>
        <p>
        </p>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class: 'btn btn-primary' %>
